---
import "@/styles/globals.css";

interface Props {
    title: string;
    layout?: "single" | "two-grid" | "three-grid";
}

const { title, layout = "single" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Monolith Cloudflare Stack - Build full-stack applications on the edge" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- Distinctive Fonts: Clash Display for headings, Satoshi for body -->
        <link rel="preconnect" href="https://api.fontshare.com" crossorigin />
        <link
            href="https://api.fontshare.com/v2/css?f[]=clash-display@400,500,600,700&f[]=satoshi@400,500,700&display=swap"
            rel="stylesheet"
        />

        <title>{title}</title>
    </head>
    <body
        class="bg-background text-foreground min-h-screen antialiased"
    >
        <main
            class:list={[
                "container mx-auto p-4",
                layout === "two-grid" &&
                    "grid grid-cols-1 md:grid-cols-2 gap-4",
                layout === "three-grid" &&
                    "grid grid-cols-1 md:grid-cols-3 gap-4",
            ]}
        >
            <slot />
        </main>
    </body>
</html>

<style is:global>
    :root {
        --font-heading: 'Clash Display', sans-serif;
        --font-body: 'Satoshi', sans-serif;
    }

    body {
        font-family: var(--font-body);
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
    }

    /* Fix cursor on buttons and interactive elements */
    button,
    [role="button"],
    a,
    input[type="submit"],
    input[type="button"],
    .cursor-pointer {
        cursor: pointer;
    }

    /* Smooth scrolling */
    html {
        scroll-behavior: smooth;
    }

    /* Selection color with Cloudflare orange */
    ::selection {
        background-color: rgba(246, 130, 32, 0.3);
        color: inherit;
    }
</style>

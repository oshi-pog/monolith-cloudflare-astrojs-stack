---
import "@/styles/globals.css";

interface Props {
    title: string;
    description?: string;
    image?: string;
    layout?: "single" | "two-grid" | "three-grid";
}

const {
    title,
    description = "Monolith Cloudflare Stack - Build full-stack applications on the edge with Astro, React, Hono, tRPC, and Cloudflare Workers.",
    image = "/og-image.png",
    layout = "single",
} = Astro.props;

// Get canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Site name for OG
const siteName = "Monolith Cloudflare Stack";
---

<!doctype html>
<html lang="en" class="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />

        <!-- Primary Meta Tags -->
        <title>{title}</title>
        <meta name="title" content={title} />
        <meta name="description" content={description} />

        <!-- Canonical URL -->
        <link rel="canonical" href={canonicalURL} />

        <!-- Favicon -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

        <!-- Theme Color -->
        <meta name="theme-color" content="#F68220" />
        <meta name="msapplication-TileColor" content="#F68220" />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={new URL(image, Astro.site)} />
        <meta property="og:site_name" content={siteName} />
        <meta property="og:locale" content="en_US" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalURL} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={new URL(image, Astro.site)} />

        <!-- Distinctive Fonts: Clash Display for headings, Satoshi for body -->
        <link rel="preconnect" href="https://api.fontshare.com" crossorigin />
        <link
            href="https://api.fontshare.com/v2/css?f[]=clash-display@400,500,600,700&f[]=satoshi@400,500,700&display=swap"
            rel="stylesheet"
        />

        <!-- JSON-LD Structured Data -->
        <script type="application/ld+json" set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "WebSite",
            "name": siteName,
            "url": Astro.site,
            "description": description,
            "potentialAction": {
                "@type": "SearchAction",
                "target": {
                    "@type": "EntryPoint",
                    "urlTemplate": `${Astro.site}?q={search_term_string}`
                },
                "query-input": "required name=search_term_string"
            }
        })} />
        <script type="application/ld+json" set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "SoftwareApplication",
            "name": siteName,
            "applicationCategory": "DeveloperApplication",
            "operatingSystem": "Cloudflare Workers",
            "offers": {
                "@type": "Offer",
                "price": "0",
                "priceCurrency": "USD"
            },
            "description": description
        })} />
    </head>
    <body
        class="bg-background text-foreground min-h-screen antialiased"
    >
        <main
            class:list={[
                "container mx-auto p-4",
                layout === "two-grid" &&
                    "grid grid-cols-1 md:grid-cols-2 gap-4",
                layout === "three-grid" &&
                    "grid grid-cols-1 md:grid-cols-3 gap-4",
            ]}
        >
            <slot />
        </main>
    </body>
</html>

<style is:global>
    :root {
        --font-heading: 'Clash Display', sans-serif;
        --font-body: 'Satoshi', sans-serif;
    }

    body {
        font-family: var(--font-body);
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: var(--font-heading);
    }

    /* Fix cursor on buttons and interactive elements */
    button,
    [role="button"],
    a,
    input[type="submit"],
    input[type="button"],
    .cursor-pointer {
        cursor: pointer;
    }

    /* Smooth scrolling */
    html {
        scroll-behavior: smooth;
    }

    /* Selection color with Cloudflare orange */
    ::selection {
        background-color: rgba(246, 130, 32, 0.3);
        color: inherit;
    }
</style>
